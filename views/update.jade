doctype html
html
  head
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
    link(rel='stylesheet', href='/Users/Macbook/Documents/GitHub/RTD-Passdown/style/table.css')
  body
    h1.row.justify-content-center.mt-3(style='color:#800000;') UPDATE INFORMATION
    .row.justify-content-center
      form.card.font-weight-light.mt-3(method='POST', action='/updateBus/#{editBus._id}' style='box-shadow: 2px 2px 10px 0px rgba(0,0,0,0.15);')
        input(type='hidden', name='id', value='#{editBus._id}')
        .row.ml-5.mt-3
          .col-md-3
            label Number
            input.form-control(type='text', name='upBus', value='#{editBus.busNumber}' required) 
          .form-group.col-md-3
            label Type
            select.form-control(type='text', name='upType' required)
              option(selected='') #{editBus.type}
              option SMA
              option BRT
              option NON-REV
              option EXPRESS
          .col-md-3
            label Date
            - var edDate = moment(editBus.date).format('MM/DD/YY')
            input.form-control(type='date', name='upDate', value='#{edDate}' required)
        .row.ml-5
          .form-group.col-md-2
            label No Part
            select.form-control(type='text', name='upNoPart' required)
              option(selected='') #{editBus.noPart}
              option True
              option False
          .col-md-4
            label Reason
            input.form-control(type='text', name='upReason', value='#{editBus.reason}' required)
          .col-md-4
            label Description
            input.form-control(type='text', name='upDesc', value='#{editBus.description}')

        .row.ml-5
          .form-group.col-md-2
            label Fixed
            select.form-control(type='text', name='fixed' required)
              option(selected='') False
              option True
          .col-md-3
            - var dateNow = Date.now()
            - var fixedDate = moment(dateNow).format('MM/DD/YY')
            label Date Fixed
            input.form-control.mb-3(type='text', name='fixDate', value='#{fixedDate}' required) 
        .row.justify-content-center.mb-4.mr-5
          .col-md-1.mr-4
            button.btn.btn-primary(type='submit') Update
          .col-md-1.ml-4
            a(href='/')
              button.btn.btn-dark(type='button') Cancel
    form
      script(type='text/javascript', src='/Users/Macbook/Documents/GitHub/RTD-Passdown/index.js')
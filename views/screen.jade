- var smaCount = 40
- var brtCount = 30
- var expCount = 0
- var nonCount = 0
- var sma = "SMA"
- var brt = "BRT"
- var exp = "EXPRESS"
- var non = "NON-REV"
- for bus in addBus
    if bus.type == sma
      - smaCount--
    if bus.type == brt
      - brtCount--
    if bus.type == exp
      - expCount++
    if bus.type == non
      - nonCount++
- var date = new Date().getTime()
doctype html
html
  head
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO' crossorigin='anonymous')
    | &#x9;&#x9;
    link(rel='stylesheet', href='/Users/Macbook/Documents/GitHub/RTD-Passdown/style/table.css')
  | &#x9;
  body
    h1.row.justify-content-center.mt-3(style='color:#800000;') RTD PASSDOWN
    | &#x9;&#x9;
    .row.justify-content-center
      table
        tr
          td
            h4.font-weight-light TOTAL BUSES ON HOLD: #{addBus.length}
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          td(style='padding:16px;')
            h4.font-weight-light SMA RUNNING: #{smaCount}
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          td(style='padding:16px;')
            h4.font-weight-light BRT RUNNING: #{brtCount}
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          td(style='padding:16px;')
            h4.font-weight-light EXPRESS ON HOLD: #{expCount}
          | &#x9;&#x9;&#x9;&#x9;&#x9;
          td(style='padding:16px;')
            h4.font-weight-light NON-REV ON HOLD: #{nonCount}
      | &#x9;&#x9;
      table.table.table-dark.font-weight-light(style='width:95%; box-shadow: 7px 7px 6px 0px rgba(0,0,0,0.25);')
        thead
          tr(style='background-color:#800000; color:white;')
            th BUS #
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            th TYPE
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            th DATE IDENTIFIED
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            th NO PART
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            th REASON DOWN
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            th DESCRIPTION
            | &#x9;&#x9;&#x9;&#x9;&#x9;
            th DAYS OUT
            | &#x9;&#x9;&#x9;&#x9;&#x9;
        | &#x9;&#x9;&#x9;&#x9;
        -for bus in addBus
          tr#passdownTable
            input(type='hidden', name='id', value='bus._id' ) 
            td #{bus.busNumber}
            td #{bus.type}
            td #{moment(bus.date).format('MMM Do YYYY')}
            td #{bus.noPart}
            td #{bus.reason}
            td #{bus.description}
            - busSecs = Math.round((date - bus.date.getTime())/86400000)
            td #{busSecs}